<h1>Create A Round</h1>

<div class="wrapper">
    <%= form_tag new_round_questions_path, html: {class: "ui form" }, method: :get do %>
        <div class="field">
            <%= label_tag :num_questions, "Number of Questions:" %>
            <br>
            <%= select_tag :num_questions, options_for_select(@numbers), class: "ui search dropdown" %>
        </div>
        <div class="field submit">
            <%= submit_tag "Continue" %>
        </div>
    <% end %>
</div>