<div class="wrapper">
    <p>Answer: The user's response must match the answer exactly to be counted as correct. The answers are not case sensitive.</p>
    <p>Keywords: If the user's response contains all keywords, the response will be counted as correct. Separate keywords by spaces. Do not use commas.</p>
    <%= form_for round, html: {class: "ui form"} do |f| %>
        <div class="inline field">
            <%= f.label :name, "Round Name:" %>
            <%= f.text_field :name %>
        </div>
        <h2>Questions:</h2>
        <div class="round-questions">
            <div class="ui list">
                <ol>
                <%= f.fields_for :questions do |q| %>
                    <li>
                        <%= q.hidden_field :creator_id, value: current_user_id %>
                        <div class="field">
                            <%= q.text_area :question, rows: "2" %>
                        </div>
                        <div class="two fields">
                            <div class="four wide field">
                                <%= q.label :answer %>
                                <%= q.text_field :answer %>
                            </div>
                            <div class="four wide field">
                                <%= q.label :alt_answer, "Keywords" %>
                                <%= q.text_field :alt_answer %>
                            </div>
                        </div>
                    </li>
                <% end %>
                </ol>
            </div>
        </div>
        <div class="field submit">
            <%= f.submit %>
        </div>
    <% end %>
</div>