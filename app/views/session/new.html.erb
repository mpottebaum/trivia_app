<h1>Login</h1>

<% if flash[:error] %>
    <h3><%= flash[:error] %></h3>
<% end %>

<% if @errors %>
<ul>
<% @errors.each do |error| %>
    <li><%= error %></li>
<% end %>
</ul>
<% end %>

<%= form_tag login_path do %>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <%= submit_tag "Login" %>
<% end %>

<%= link_to "Create Username", new_user_path %>